{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <style>
    body{
        background: Lavender !important;
        }
    </style>        
{% endblock %}

{% block body %}

<div class="row mt-2">
    <div class="col d-flex justify-content-center">
    <img id="logo-grande" src="{{ asset('img/logo/login_iber_casa.svg') }}" alt="" srcset="" style="height: 150px;"}>
    </div>
</div>
<div class="row mt-2">
    <div class="col-md-3"></div>
    <div class="col-md-6 border border-dark border-4 rounded p-5" {# d-flex justify-content-center align-items-center #}>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class=" mb-3 font-weight-normal">Login
            <span><i style="font-size:38px;" class="fas fa-sign-in-alt text-dark ml-1"></i></span></h1>
            <label class="mt-1" for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label class="mt-1" for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-primary mt-4" type="submit">
                Sign in
            </button>
        </form>

    </div>
    <div class="col-md-3"></div>
</div>
{% endblock %}
