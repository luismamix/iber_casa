{% extends 'base.html.twig' %}

{% block title %}Pantalla de Registro{% endblock %}

{% block body %}
<div class="row mt-2">
    <div class="col">
         <h1>Registro
        <span><i style="font-size:38px;" class="fas fa-registered text-dark ml-1"></i></span></h1>
    </div>
</div>
<div class="row mt-2">
    <div class="col-md-3"></div>
    <div class="col-md-6">
         {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.nombre) }}
            {{ form_row(registrationForm.apellido) }}
            {{ form_row(registrationForm.direccion) }}
            {{ form_row(registrationForm.telefono) }}
            {{ form_row(registrationForm.tipousr) }}

            <button type="submit" class="btn btn-marine">Registro</button>
        {{ form_end(registrationForm) }}
    </div>
    <div class="col-md-3"></div>
</div>  
{% endblock %}
