{% extends 'base.html.twig' %}

{% block title %}Uso index{% endblock %}

{% block body %}
    <h1>Uso index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for uso in usos %}
            <tr>
                <td>{{ uso.id }}</td>
                <td>{{ uso.descripcion }}</td>
                <td>
                    <a href="{{ path('uso_show', {'id': uso.id}) }}">show</a>
                    <a href="{{ path('uso_edit', {'id': uso.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('uso_new') }}">Create new</a>
{% endblock %}
