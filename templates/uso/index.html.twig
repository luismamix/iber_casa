{% extends 'base.html.twig' %}

{% block title %}Uso index{% endblock %}

{% block body %}
    <h1>Listado de Usos
    <span><i style="font-size:38px;" class="fas fa-clipboard-list text-dark ml-1"></i></span></h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for uso in usos %}
            <tr>
                <td>{{ uso.id }}</td>
                <td>{{ uso.descripcion }}</td>
                <td>
                    <a class="btn btn-primary" role="button" href="{{ path('uso_show', {'id': uso.id}) }}">Mostrar</a>
                    <a class="btn btn-secondary" role="button" href="{{ path('uso_edit', {'id': uso.id}) }}">Modificar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-primary" role="button" href="{{ path('uso_new') }}">Crear nuevo</a>
{% endblock %}
