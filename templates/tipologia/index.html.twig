{% extends 'base.html.twig' %}

{% block title %}Tipologia index{% endblock %}

{% block body %}
    <h1>Tipologia index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tipologium in tipologias %}
            <tr>
                <td>{{ tipologium.id }}</td>
                <td>{{ tipologium.descripcion }}</td>
                <td>
                    <a href="{{ path('tipologia_show', {'id': tipologium.id}) }}">show</a>
                    <a href="{{ path('tipologia_edit', {'id': tipologium.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tipologia_new') }}">Create new</a>
{% endblock %}
