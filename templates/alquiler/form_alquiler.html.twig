{% extends 'base.html.twig' %}

{% block title %}  Formulario Alquilar inmueble {% endblock %}

{% block javascripts %}
      <script src="{{ asset('js/tramites.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <div class="row mt-5">
                <div class="col-md-8">
                    <h1><span><i style="font-size:38px;" class="far fa-handshake text-dark mr-1"></i></span>
                    {{inmueble.comercializacion.descripcion | capitalize}}, Id: {{inmueble.id}} </h1>
                </div>
            </div>
            <div class="row mt-2 d-flex justify-content-center">
                <div class="col-md-6">
                    <form action="{{path('alquiler_iniciar')}}" method="post">

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" id="" for="idusr">Id Usr</label>
                            <div class="col-sm-6">
                            <input type="number" class="form-control form-control-md" name="idusr" value={{user.id}} placeholder="Id Usr" readonly required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" id="" for="idinmueble">Id Inmueble</label>
                            <div class="col-sm-6">
                            <input type="number" class="form-control form-control-md" name="idinmueble" value={{inmueble.id}} placeholder="Id Inmueble" readonly required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" id="" for="precio">Importe</label>
                            <div class="col-sm-6">
                            <input type="number" class="form-control form-control-md" name="precio" value={{inmueble.precio}} placeholder="Importe" min="1" step="0.01" readonly required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label" for="fecha_inicio" >Fecha Inicio</label>
                            <div class="col-md-6">
                            <input type="datetime-local" class="form-control form-control-md" id="fecha_inicio" name="fecha_inicio" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label" for="fecha_fin" >Fecha Fin</label>
                            <div class="col-md-6">
                            <input type="datetime-local" class="form-control form-control-md" id="fecha_fin" name="fecha_fin" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" id="" for="fianza">Fianza</label>
                            <div class="col-sm-6">
                            <input type="number" class="form-control form-control-md" name="fianza" placeholder="Fianza" min="1" step="0.01" required>
                            </div>
                        </div>
                        <div class="row mt-4 ">
                            <div class="col d-flex justify-content-center">
                                <button type="submit" class="btn btn-outline-marine btn-lg"> Iniciar </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}